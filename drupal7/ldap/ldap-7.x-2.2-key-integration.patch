From: Brian Wood <bwood@berkeley.edu>
Date: Wed, 31 May 2017 16:23:59 -0700
Subject: [PATCH] set access

---
 .../modules/ucberkeley_cas/ldap/ldap_servers/LdapServer.class.php   | 4 ++++
 .../ucberkeley_cas/ldap/ldap_servers/LdapServerAdmin.class.php      | 6 ++++++
 2 files changed, 10 insertions(+)

diff --git a/ldap/ldap_servers/LdapServer.class.php b/ldap/ldap_servers/LdapServer.class.php
index 6d320a1..4303fe1 100644
--- a/ldap/ldap_servers/LdapServer.class.php
+++ b/ldap/ldap_servers/LdapServer.class.php
@@ -341,6 +341,10 @@ class LdapServer {
       $userdn = ($userdn != NULL) ? $userdn : $this->binddn;
       $pass = ($pass != NULL) ? $pass : $this->bindpw;
 
+      if (module_exists('key') && $key_value = key_get_key_value($pass)) {
+        $pass = $key_value;
+      }
+
       if ($this->followrefs) {
         $rebHandler = new LdapServersRebindHandler($userdn, $pass);
         ldap_set_rebind_proc($this->connection, array($rebHandler, 'rebind_callback'));
diff --git a/ldap/ldap_servers/LdapServerAdmin.class.php b/ldap/ldap_servers/LdapServerAdmin.class.php
index dabde53..b1e4093 100644
--- a/ldap/ldap_servers/LdapServerAdmin.class.php
+++ b/ldap/ldap_servers/LdapServerAdmin.class.php
@@ -749,6 +749,7 @@ public function drupalFormSubmit($op, $values) {
           '#type' => 'checkbox',
           '#title' => t('Clear existing password from database.  Check this when switching away from Service Account Binding.'),
           '#default_value' => 0,
+          '#access' => FALSE,
         ),
       ),
 
@@ -1242,6 +1243,11 @@ public function drupalFormSubmit($op, $values) {
 
     );
 
+    if (array_key_exists('key_select', module_invoke_all('element_info'))) {
+      $fields['bindpw']['form']['#type'] = 'key_select';
+      unset($fields['bindpw']['form']['#size']);
+    }
+
   return $fields;
 
   }
